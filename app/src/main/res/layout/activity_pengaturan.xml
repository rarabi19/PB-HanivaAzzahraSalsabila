<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Pengaturan"
    android:background="@drawable/ic_5">

    <!-- Navbar di kanan atas -->
    <include
        android:id="@+id/include_navbar"
        layout="@layout/navbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <LinearLayout
        android:id="@+id/menuPanel"
        android:layout_width="392dp"
        android:layout_height="765dp"
        android:layout_marginBottom="108dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.384"
        app:layout_constraintStart_toStartOf="parent">

        <!-- Scrollable Card Menu -->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="80sp"
            android:fontFamily="@font/poppins_extra_bold"
            android:gravity="center"
            android:text="SETTING"
            android:textColor="#7A623B"
            android:textSize="28sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/bsuara"
                android:layout_width="131dp"
                android:layout_height="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                app:srcCompat="@drawable/ic_suara" />

            <ImageView
                android:id="@+id/bbahasa"
                android:layout_width="138dp"
                android:layout_height="35dp"
                android:layout_marginBottom="10dp"
                app:srcCompat="@drawable/ic_bahasa" />

            <ImageView
                android:id="@+id/bbantuan"
                android:layout_width="143dp"
                android:layout_height="28dp"
                android:layout_marginBottom="10dp"
                app:srcCompat="@drawable/ic_bantuan" />

            <ImageView
                android:id="@+id/btema"
                android:layout_width="191dp"
                android:layout_height="75dp"
                android:layout_marginLeft="4dp"
                android:layout_marginBottom="10dp"
                app:srcCompat="@drawable/ic_tema" />

            <ImageView
                android:id="@+id/baboutMe"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_gravity="right"
                android:layout_marginTop="55dp"
                app:srcCompat="@drawable/ic_aboutme" />

        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>